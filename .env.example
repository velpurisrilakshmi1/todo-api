# Environment Configuration for Todo API
# Copy this file to .env and update the values for your environment

# Security Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production-minimum-32-characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database Configuration
DATABASE_URL=sqlite:///./todos.db
# For PostgreSQL: DATABASE_URL=postgresql://user:password@localhost/todoapi

# Application Configuration
DEBUG=True
ENVIRONMENT=development
API_TITLE=Todo API
API_VERSION=1.0.0
API_DESCRIPTION=A secure Todo API with JWT authentication

# Security Settings
MIN_PASSWORD_LENGTH=8
MAX_LOGIN_ATTEMPTS=5
RATE_LIMIT_PER_MINUTE=60

# CORS Settings (for frontend integration)
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
CORS_ALLOW_CREDENTIALS=True